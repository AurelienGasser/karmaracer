!!! strict
html
  head
    title Karma Racer, Map Maker
    link(href='http://fonts.googleapis.com/css?family=Armata', rel='stylesheet')
    script(type='text/javascript', src='/socket.io/socket.io.js')
    script(type='text/javascript')
      var G_mapName = '#{map}'
    script(type='text/javascript', src='/dist/vendor_common.js')
    script(type='text/javascript', src='/dist/vendor_mapmaker.js')
    script(type='text/javascript', src='/dist/common.js')
    script(type='text/javascript', src='/dist/mapmaker.js') 
    link(rel='stylesheet', href='/dist/common.css')
    link(rel='stylesheet', href='/dist/mapmaker.css')
  body
    div#map-canvas
    div#fps
    ul#items
    ul#properties
        li
            input#map-name(type='text', name='map-name', placeholder='map name')
        li
            input#map-bg(type='text',name='map-bg', placeholder='background',list='bg-list')
        li
            input#map-width(type='number',name='map-width', min='0', max='128', placeholder='width',value='64')
        li
            input#map-height(type='number', name='map-height', min='0', max='128', placeholder='height',value='32')
        li
            span enable
                input#map-enable(type='checkbox', name='map-enable', min='0', max='128', placeholder='enable', checked=false)
        li

            ul#actions
                li
                button#save-map-node Save Map
    ul#canvas-debug
